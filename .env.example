# Atrium environment variables
# Copy to .env and adjust as needed.

# Backend (FastAPI)
# Index root: where textbook_index/ lives (default: ./textbook_index)
# INDEX_ROOT=./textbook_index

# API port (default: 8000)
# PORT=8000

# Frontend (Next.js)
# API base URL for frontend to call backend
NEXT_PUBLIC_API_BASE=http://localhost:8000

# Optional: embedding provider for RAG (e.g. openai, local)
# EMBEDDING_PROVIDER=
